<merge xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dip" android:layout_weight="0.6"
    android:background="@android:color/transparent">
    <ImageView
		android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/wiki_list_head" />
    <TextView android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/WidgetListHeader"
        android:background="@drawable/list_txt_bg"
        android:text="@string/list_msg" />
    </FrameLayout>	    
</merge>