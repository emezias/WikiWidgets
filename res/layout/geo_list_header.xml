<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout 
   		android:layout_width="match_parent"
   		android:layout_height="0dip" android:layout_weight="1"
   		android:gravity="center">
	    <TextView android:id="@+id/listTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        style="@style/WidgetListHeader"
	        android:text="@string/list_msg"
	        android:layout_gravity="right"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="20dp" />
	    
	    <ImageButton android:id="@+id/fresh_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:contentDescription="@string/dialogTitle"
			android:src="@drawable/refresh_btn" 
			android:scaleType="fitCenter"
			android:background="@drawable/widget_item_background" 
			android:padding="4dip" />	    
	    
	</LinearLayout>	 	    
</merge>