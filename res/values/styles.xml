<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="PrefsStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textAppearance">@android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SwitcherFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:inAnimation">@android:anim/slide_in_left</item>
        <item name="android:outAnimation">@android:anim/slide_out_right</item>
        <item name="android:textColor">#444444</item>
    </style>
    
    <style name="GeoButton" parent="@android:style/Holo.SegmentedButton">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
		<item name="android:onClick">geo_button</item>
	    <item name="android:padding">8dp</item>
	    <item name="android:scaleType">fitXY</item>
	    <item name="android:background">@drawable/blue_bg</item>
	    </style> 
        
    <style name="ItemTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        </style>
        
    <style name="Text2" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:ellipsize">marquee</item>
        </style>
     
    <style name="WidgetListHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        </style>
    
</resources>