<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="SwitcherFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:inAnimation">@android:anim/slide_in_left</item>
        <item name="android:outAnimation">@android:anim/slide_out_right</item>
        <item name="android:textColor">#444444</item>
    </style>
    
