<receiver android:name=".FeatureStackProvider" 
		    android:label="@string/featureStackTablet"
		    android:enabled="true">
	    	<intent-filter>
	        	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
	    	</intent-filter>
